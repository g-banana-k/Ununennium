{
    "compilerOptions": {
        "target": "ES2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": [
      "test/**/*"
    ]
}
